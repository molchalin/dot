#!/usr/bin/env bash

set -o errexit
set -o pipefail

ensure-gocryptfs-mounted;

NOTES_BASE=~/cryptfs/notes

function today-note() {
    file=$(printf "%s/%s" $NOTES_BASE $(date '+%F.md'))
    if [[ ! -e $file ]]; then
        touch $file
        LANG=ru_RU date "+%H:%M %A" >> $file
    fi
    $EDITOR $file
}

function yesterday-note() {
    file=$(printf "%s/%s" $NOTES_BASE $(date -v-1d '+%F.md'))
    if [[ ! -e $file ]]; then
        touch $file
        LANG=ru_RU date -v-1d "+%A" >> $file
        echo >> $file
        LANG=ru_RU date "+пишу %F %H:%M" >> $file
    fi
    $EDITOR $file
}

function random-note() {
    notes=( $(find $NOTES_BASE -ipath '*.md' ) )
    number=$(( $RANDOM % ${#notes[@]}))
    bat ${notes[number]}
}

function last-note() {
    note=$(find $NOTES_BASE -ipath '*.md' | sort | tail -n 1 )
    bat $note
}

function feed() {
    notes=$(find $NOTES_BASE -ipath '*.md' | sort )
    bat $notes
}

case $1 in
    today)
        today-note
        ;;
    yesterday)
        yesterday-note
        ;;
    last)
        last-note
        ;;
    random)
        random-note
        ;;
    feed)
        feed
        ;;
    *)
        printf "unknown command %q" $1
        exit 1;
        ;;
esac
