#!/usr/bin/env bash

PROJECTS="$HOME/Development"
selected=$(fd . $PROJECTS --type d --min-depth 1 --max-depth 2  --exec  bash -c 'test -e "{}/.git" && echo "{}"' | sed "s;$PROJECTS/;;" | fzf  --preview "bat --color=always $PROJECTS/{}/README.md")

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected -c $PROJECTS/$selected
    exit 0
fi

if ! tmux has-session -t=$selected 2> /dev/null; then
    tmux new-session -ds $selected -c $PROJECTS/$selected
fi

tmux switch-client -t $selected
