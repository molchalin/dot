#!/usr/bin/env bash

if [[ "$1" == "preview" ]]; then
    if tmux has-session -t=$2 2> /dev/null; then
        tmux list-windows -F "#{window_active},#{window_index},#{window_name},#{session_path},#{pane_current_path}" -t=$2 | tmux.plx "window-list" "$2"
    else
        tmux.plx "window-list" "$2"
    fi
    exit 0;
fi

selected_name=$(tmux.plx list | fzf --ignore-case --border none --scheme history --preview 'tmux-sessionizer preview {}')

if [[ -z $selected_name ]]; then
    exit 0
fi

selected_path=$(tmux.plx choose "$selected_name")

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_name" -c "$selected_path"
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected_path"
fi

tmux switch-client -t "$selected_name"
